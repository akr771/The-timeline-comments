<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timeline App</title>
</head>
<body>
    <h1>Timeline</h1>
    <form action="/new" method="POST">
        <textarea name="content" placeholder="Post a message..." required minlength="25"></textarea>
        <button type="submit">Post a message</button>
    </form>
    <hr>
    <% posts.forEach(post => { %>
        <div>
            <p><%= new Date(post.createdAt).toLocaleDateString() %></p>
            <p><%= post.content %></p>
            <h4>Comments:</h4>
            <% post.comments.forEach(comment => { %>
                <p><%= new Date(comment.createdAt).toLocaleDateString() %>: <%= comment.content %></p>
            <% }) %>
            <form action="/comment/<%= post._id %>" method="POST">
                <textarea name="content" placeholder="Post a comment..." required minlength="25"></textarea>
                <button type="submit">Post a comment</button>
            </form>
        </div>
        <hr>
    <% }) %>
</body>
</html>

